    <script>
window.addEventListener("load", () => {
  setTimeout(() => {
    const modalEl = document.getElementById('welcomeModal');
    if (!modalEl) return;

    const welcome = new bootstrap.Modal(modalEl);
    welcome.show();

    const closeBtn = document.getElementById('welcomeCloseBtn');
    const secEl  = document.getElementById('autoCloseSec');
    const noteEl = document.getElementById('autoCloseNote');

    let secs = 8;
    if (secEl) secEl.textContent = secs;

    const timerId = setInterval(() => {
      secs--;
      if (secEl) secEl.textContent = secs;
      if (secs <= 0) {
        clearInterval(timerId);
        welcome.hide();
      }
    }, 1000);

    closeBtn?.addEventListener('click', () => {
      clearInterval(timerId);
      welcome.hide();
    });

    modalEl.addEventListener('hidden.bs.modal', () => {
      clearInterval(timerId);
      if (noteEl) noteEl.style.display = 'none';
    });
  }, 2000); // Show modal after 2 seconds delay
});
</script>


